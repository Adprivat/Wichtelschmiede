<% layout('layout') %>
<h1><%= powder ? 'Gießpulver bearbeiten' : 'Neues Gießpulver anlegen' %></h1>
<form action="<%= powder ? '/casting-powders/' + powder.id + '/edit' : '/casting-powders/new' %>" method="post">
  <div class="form-group">
    <label>Name</label>
    <input type="text" name="name" class="form-control" value="<%= powder ? powder.name : '' %>" required>
  </div>
  <div class="form-group">
    <label>Wasseranteil</label>
    <input type="number" step="0.01" name="water_ratio" class="form-control" value="<%= powder ? powder.water_ratio : '' %>" required>
  </div>
  <div class="form-group">
    <label>Pulveranteil</label>
    <input type="number" step="0.01" name="powder_ratio" class="form-control" value="<%= powder ? powder.powder_ratio : '' %>" required>
  </div>
  <div class="form-group">
    <label>Preis pro Gramm</label>
    <input type="number" step="0.01" name="price_per_gram" class="form-control" value="<%= powder ? powder.price_per_gram : '' %>" required>
  </div>
  <button type="submit" class="btn btn-success">Speichern</button>
</form>
